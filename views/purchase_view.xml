<odoo>
    <data>
        <record model="ir.ui.view" id="sha_po_line_import_form">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//page[@name='products']//field[@name='order_line']" position="before">
                    <button type="object" name="import_lines" string="Import Lines" class="oe_highlight"
                            attrs="{'invisible': [('state', 'in', ['done', 'cancel'])]}"/>
<!--                            groups="sha_import_order_lines.group_purchase_import_line_user"/>-->
                </xpath>
            </field>
        </record>
    </data>
</odoo>
